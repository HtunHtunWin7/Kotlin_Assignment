<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroung_blue">

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_double"
        android:gravity="center"
        android:orientation="vertical">

        <org.mmtextview.components.MMTextView
            android:id="@+id/text_movieTitle_detail"
            style="@style/Widget.AppCompat.ActionButton.Overflow"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie Title"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_24" />

        <org.mmtextview.components.MMTextView
            android:id="@+id/text_movieFilm_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Type of movie film" />

        <LinearLayout
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_imdb_detail"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:text="7.5"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_20" />
            <TextView
                android:id="@+id/text_tomato_detail"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="97%"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_20" />
            <TextView
                android:id="@+id/text_metacritic_detail"
                android:layout_weight="1"
                android:text="79%"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_20" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:text="IMDB"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:text="Rotten Tomato"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:text="Metacritic"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:layout_margin="@dimen/spacing_triple"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/download"
            android:id="@+id/detail_photo"/>
        <org.mmtextview.components.MMTextView
            android:gravity="center"
            android:layout_margin="@dimen/spacing_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_paragraph"/>
        <Button
            android:layout_marginTop="@dimen/spacing_double"
            android:textAllCaps="false"
            android:id="@+id/btn_buyTickets_detail"
            android:paddingStart="@dimen/spacing_double"
            android:paddingEnd="@dimen/spacing_double"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height"
            android:background="@drawable/btn_shape"
            android:text="Buy Tickets"
            android:layout_marginBottom="@dimen/spacing_normal"/>
    </LinearLayout>

</LinearLayout>